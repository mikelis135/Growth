<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingEnd="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/coursePhotoImg"
        android:layout_width="152dp"
        android:layout_height="228dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/channelTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:letterSpacing="0.04"
        android:text="The Cure For Loneliness"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/coursePhotoImg"
        app:layout_constraintStart_toStartOf="@id/coursePhotoImg"
        app:layout_constraintTop_toBottomOf="@id/coursePhotoImg" />

    <TextView
        android:id="@+id/courseTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.1"
        android:text="Mindvalley Mentoring"
        android:textAllCaps="true"
        android:textColor="@color/colorSubTitle"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/coursePhotoImg"
        app:layout_constraintStart_toStartOf="@id/coursePhotoImg"
        app:layout_constraintTop_toBottomOf="@id/channelTitleTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>